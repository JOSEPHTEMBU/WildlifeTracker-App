{{#partial "content"}}


    {{#if sightings}}

        <h3>Sightings</h3>
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Name</th>

                <th scope="col">Age</th>

                <th scope="col">Health</th>

                <th scope="col">Location</th>

                <th scope="col">Ranger</th>

            </tr>
            </thead>
            <tbody>
            {{#each sightings}}
                <tr>
                    <td>{{name}}</td>

                    <td>{{name}}</td>


                    <td>{{name}}</td>

                    <td>{{name}}</td>


                </tr>
            {{/each}}
            </tbody>
        </table>
    {{/if}}







{{/partial}}
