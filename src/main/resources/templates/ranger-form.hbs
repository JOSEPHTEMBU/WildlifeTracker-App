{{#partial "content"}}
    <div class="container">
        <h5 class="text-center">Adding  Rangers</h5>
        <hr>
        <form method="Post" action="/addranger">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="badge">Brooch Number</label>
                <input type="number" class="form-control" id="brooch" name="brooch" placeholder="Brooch">
            </div>
            <div class="form-group">
                <label for="contact">brooch</label>
                <input type="tel" class="form-control" id="contact" name="contact" placeholder="Contact">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
{{/partial}}

